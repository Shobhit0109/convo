root=true

[*]
charset=utf-8
end_of_line=lf
indent_size=2
indent_style=space
insert_final_newline=true
max_line_width=80
tab_width=4
trim_trailing_whitespace=true

[*.ts]
quote_type = single
ij_typescript_use_double_quotes = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{rb,yaml,yml,lua}]
indent_size=2
indent_style=space

[MakeFile]
indent_style=tab
